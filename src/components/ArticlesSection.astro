---
import ArticleList from "./ArticlesList.astro";


interface Article {
  frontmatter: {
    title: string;
    excerpt?: string;
  };
  url: string;
}

function chunkArray<T>(array: T[], chunkSize: number): T[][] {
  const result: T[][] = [];
  for (let i = 0; i < array.length; i += chunkSize) {
    result.push(array.slice(i, i + chunkSize));
  }
  return result;
}

const { allArticles } = Astro.props;

const articlesChunks: Article[][] = chunkArray(allArticles, 10);
---

<div class="flex flex-col items-center justify-between w-11/12">
    {articlesChunks.map((chunk, index) => (
        <ArticleList key={index} articles={chunk}/>
      ))}
</div>
